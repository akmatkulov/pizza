<h2>Welcome to Pizza Shop</h2>

<div class="row">
    <% @products.each do |item| %>
    <div class="col-md-3">
        <div><%= item.title %></div>
        <div><img src="<%= item.path_to_image %>" width="200" height="200"></div>
        <div><%= item.description %></div>
        <div>Size: <%= item.size %> cm</div>
        <div>Price: <%= item.price %> rub</div>
        <div><button type="button" class="btn btn-success" onclick="add_to_cart(<%= item.id %>)">AddToCart</button></div>
    </div>
    <% end %>
</div>
<br/>
<br/>
<button class="btn btn-primary">Clickme</button>

<script type="text/javascript">
    $(function() {
        update_orders_input();
        update_orders_button();
    })
</script>
